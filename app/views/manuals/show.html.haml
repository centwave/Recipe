- model_class = Manual
.page-header
  %h1=t '.title', :default => model_class.model_name.human
  - unless @manual.new_record?
    - unless @manual.image_url.to_s.empty?
      = image_tag @manual.image_url.to_s

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @manual.title
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @manual.body
%p
  %strong= model_class.human_attribute_name(:publish_date) + ':'
  %br
  = @manual.publish_date
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @manual.user_id

%p
  %strong= model_class.human_attribute_name(:steps) + ':'
  -for step in @manual.steps   
    %br
    -unless step.new_record?
      - if step.image.blank?
        = step.text
        = link_to image_tag(step.image.url(:thumb)), step.image.url(:original)

//-if @manual.spree_products?
//= link_to 'Spree product', shop_product_path(@manual.spree_products)
//%p
//  = @manual.spree_products
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), manuals_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_manual_path(@manual), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), manual_path(@manual), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  
